<h1 class="text-center"> Photo List</h1>

<table class="table table-hover" style="width: 80%;" align="center">
  <thead>
    <tr>
      <th><h5>Photo Name</h5></th>
      <th><h5>Description</h5></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @photos.each do |photo| %>
      <tr class="warning">
        <td><%= photo.name %></td>
        <td><%= photo.description %></td>
        
        <td><%= link_to 'Show', album_photo_path(@album,photo), :class=>"btn btn-default " %></td>
        <td><%= link_to 'Edit', edit_album_photo_path(@album, photo), :class=>"btn btn-default " %></td>
        <td><%= link_to 'Destroy',[ @album,photo], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-default " %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<%= link_to 'New Photo', new_album_photo_path , :class=>"btn btn-default " %>&nbsp;&nbsp;&nbsp;
<%= link_to 'Back to Albums', album_path(@album), :class=>"btn btn-default " %>
</center>
